<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.camscraft.lightsapp.MainActivity">

    <Button
        android:id="@+id/offButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:text="Off"
        app:layout_constraintBottom_toTopOf="@+id/jugButton"
        app:layout_constraintEnd_toStartOf="@+id/sineButton"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/sineButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sinelon"
        app:layout_constraintBottom_toTopOf="@+id/bpmButton"
        app:layout_constraintEnd_toStartOf="@+id/confButton"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/offButton"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/confButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Confetti"
        app:layout_constraintBottom_toTopOf="@+id/rainButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/sineButton"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/jugButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Juggle"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/bpmButton"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/offButton" />

    <Button
        android:id="@+id/bpmButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="BPM"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/rainButton"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/jugButton"
        app:layout_constraintTop_toBottomOf="@+id/sineButton" />

    <Button
        android:id="@+id/rainButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Rainbow"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/bpmButton"
        app:layout_constraintTop_toBottomOf="@+id/confButton" />

    <Button
        android:id="@+id/customButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:text="Set Color"
        app:layout_constraintBottom_toTopOf="@+id/bpmButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/sineButton" />
</android.support.constraint.ConstraintLayout>
